<form action="/api/users/login" enctype="multipart/form-data" method="POST">
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input type="email" name="email" id="form-email" class="form-control" />
    <label class="form-label" for="">Email address</label>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input type="password" name="password" id="form-password" class="form-control" />
    <label class="form-label" for="">Password</label>
  </div>

  <!-- Submit button -->
  <button id="login-button" type="button" class="btn btn-primary btn-block mb-4">Sign in</button>

  <!-- Register buttons -->
  <div class="text-center">
    <p>Not a member? <a href="/register">Register</a></p>
  </div>
</form>
<script>
  document.addEventListener('load', function() {
    document.getElementById('login-button').addEventListener('click', function() {
      $.ajax({
        url: '/api/users/login',
        type: 'post',
        data: '{email: "' + $jQuery("#form-email").val() + '", password: "' + $jQuery("#form-password") + '"}',
        dataType: 'json',
        succes: function() {
          //login success send to my dashboard
          document.location = '/Dashboard';
        },
        error: function(xhr, status, error) {
          alert(error);
        }
      });
    });
  });
</script>
